{
    "name": "popphp/pop-pdf",
    "description": "PHP PDF library for generating and importing PDF documents. A component of the Pop PHP Framework",
    "keywords": [
        "pdf",
        "create pdf",
        "import pdf",
        "pdf generation",
        "php pdf library",
        "php pdf processing",
        "php",
        "pop",
        "pop php"
    ],
    "homepage": "http://github.com/popphp/pop-pdf",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@noladev.com",
            "homepage": "https://www.popphp.org/"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "popphp/pop-color" : "^1.0.2",
        "popphp/pop-css" : "^2.0.2",
        "popphp/pop-dom" : "^4.0.5",
        "popphp/pop-utils" : "^2.2.0",
        "smalot/pdfparser" : "^2.11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5.0"
    },
    "suggest": {
        "ext-gd": "For added images to PDFs",
        "ext-iconv": "For string conversion",
        "ext-mbstring": "For working with multi-byte string",
        "ext-zlib": "For compression"
    },
    "autoload": {
        "psr-4": {
            "Pop\\Pdf\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pop\\Pdf\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.2.x-dev"
        }
    }
}

